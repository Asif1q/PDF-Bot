{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "schedule": ["after 6pm every day", "every weekend"],
  "timezone": "Australia/Sydney",
  "packageRules": [
    {
      "matchPaths": [".github/workflows/*.yml"],
      "labels": ["github-actions"]
    },
    { "matchFiles": ["Dockerfile"], "labels": ["docker"] }, 
    {
      "lockFileMaintenance": {
        "enabled": true, 
        "automerge": true
      }
    }
  ]
}
